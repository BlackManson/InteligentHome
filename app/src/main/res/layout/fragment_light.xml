<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/wall"
             tools:context=".LightFragment">

    <!-- TODO: Update blank fragment layout -->

    <com.bitvale.switcher.SwitcherX
            android:checked="false"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:id="@+id/switch1"
            app:switcher_on_color="@color/colorPrimary"
            app:switcher_off_color="@color/colorPrimaryDark"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"/>
    <com.bitvale.switcher.SwitcherX
            android:checked="false"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:id="@+id/switch2"
            app:switcher_on_color="@color/colorPrimary"
            app:switcher_off_color="@color/colorPrimaryDark"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/switch1"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Kitchen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:textSize="40sp"
            android:textColor="@color/colorPrimaryDark" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Light 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" app:layout_constraintStart_toEndOf="@+id/switch1"
            android:layout_marginStart="8dp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:textSize="18sp"
            android:textColor="@color/colorPrimary"/>
    <TextView
            android:text="Light 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" android:textSize="18sp"
            android:textColor="@color/colorPrimary" android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toEndOf="@+id/switch2"
            android:layout_marginStart="8dp"/>

</android.support.constraint.ConstraintLayout>